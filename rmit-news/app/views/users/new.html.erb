
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 text-center">
			<div class="search-box">
				<div class="caption">
					<h3>Sign Up</h3>
				</div>
				<form action="" class="loginForm col-xs-12">
					<div class="input-group w-100" id='newUserHolder'>
            <%= form_for :user, url: '/users' do |f|%>
              <div class="signupFields" > <span>Username:</span> <%= f.text_field :username%> </div>
              <div class="signupFields" > <span>Password:</span> <%= f.password_field :password%> </div>
              <%= f.submit 'Sign up'%>
            <%end%>
					</div>
				</form>
			</div>
		</div>
		<div class="col-xs-12" style="top: 25px;">
			<div class="aro-pswd_info col-xs-12">

        <div id="pswd_info">
					<h4>Password must have these requirements</h4>
					<ul>
						<li id="letter" class="invalid">At least <strong>one lowercase letter</strong></li>
						<li id="capital" class="invalid">At least <strong>one capital letter</strong></li>
						<li id="number" class="invalid">At least <strong>one number</strong></li>
						<li id="length" class="invalid">Be at least <strong>10 characters</strong></li>
						<li id="space" class="invalid">At least<strong> one special character [~,!,@,#,$,%,^,&,*,-,=,.,;,']</strong></li>
					</ul>
				</div>

        <div id="usr_info">
					<h4>Username must have these requirements</h4>
					<ul>
						<li id="u_length" class="invalid">Between <strong>2 to 15 characters</strong></li>
						<li id="u_space" class="invalid">Must use <strong>only letters, digits, dashes and underscores</strong></li>
						<li id="" class="invalid">Must be<strong> unique </strong></li>
					</ul>
				</div>

			</div>
		</div>
	</div>
</div>
