<!DOCTYPE html>
<html>
  <head>
    <script src="assets/jquery.js" type="text/javascript"></script>
    <title>RmitNews</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <div>
                <a class="navbar-brand" style='padding-right: 2px;' > <img style='height:25px;' src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/RMIT_University_Logo.svg/2000px-RMIT_University_Logo.svg.png" alt="">  </a>
                <span class="newsFix"> news </span>
              </div>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li class=""><%= link_to "Home", root_path %></li>
                <li><%= link_to "New Comments", newcomments_path %></li>
                <li><%= link_to "Submit", submit_path %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <% if current_user %>
                  <li><%= link_to "Logout", '/logout' %></li>
                <% else %>
                  <li><%= link_to 'Sign Up', '/signup' %></li>
                  <li class="active"><%= link_to 'Login', '/login' %></li>
                <% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </nav>

    <div class="col-xs-12 fwTopmargin gutters">
      <%= yield %>
    </div>

  </body>
</html>
